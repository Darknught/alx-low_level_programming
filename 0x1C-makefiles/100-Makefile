CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

SRC = main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME) *#


fclean: clean
	$(RM) $(NAME) $(NAME)

re: fclean all

-include m.h
