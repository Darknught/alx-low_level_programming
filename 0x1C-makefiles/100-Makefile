CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

SRC = main.c school.c
NAME = school
OBJ = main.o school.o

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ $(NAME) *#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

-include m.h
